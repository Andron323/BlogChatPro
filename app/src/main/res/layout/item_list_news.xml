<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_list_news">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgraund_item_news"
        android:layout_margin="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/img_news"
            android:src="@drawable/news_deff_2"
            android:layout_alignParentTop="true"
            android:paddingTop="3dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:visibility="gone"
            android:layout_gravity="center" />

        <WebView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/video_news"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/img_news"
            android:layout_gravity="center"
            android:visibility="gone"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/data_news"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/video_news"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:textSize="11sp"
            android:padding="2dp"
            android:layout_marginLeft="10dp"
            android:textStyle="normal" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ikon_view_news"
            android:layout_below="@+id/video_news"
            android:layout_toLeftOf="@+id/view_news"
            android:src="@drawable/ic_viewse"
            app:tint="@color/white">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/view_news"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/video_news"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:padding="2dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/content_news"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:layout_below="@+id/ikon_view_news"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textStyle="normal" />

        <TextView
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgraund_btn_stavka"
            android:id="@+id/url_news"
            android:layout_gravity="center"
            android:layout_below="@+id/content_news"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:textSize="18sp"
            android:padding="5dp"
            android:text="@string/macke_btn"
            android:textAlignment="center"
            android:textStyle="bold"
            android:visibility="gone"
            android:focusable="true" />

        <RelativeLayout
            android:clickable="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/batn_like"
            android:visibility="gone"
            android:background="@drawable/backgraund_btn_kike"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/url_news">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ikon_like_news"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@+id/like_news"
                android:src="@drawable/ic_like"
                android:layout_marginRight="5dp"
                app:tint="@color/white">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/like_news"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:padding="2dp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:clickable="true"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/batn_like2"
            android:visibility="gone"
            android:background="@drawable/backgraund_btn_stavka"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/url_news">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ikon_like_news2"
                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@+id/like_news2"
                android:src="@drawable/ic_like"
                android:layout_marginRight="5dp"
                app:tint="@color/white">
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/like_news2"
                android:layout_alignParentRight="true"
                android:textColor="@color/white"
                android:layout_marginRight="10dp"
                android:padding="2dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>